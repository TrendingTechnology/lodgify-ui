/*******************************
            Input
*******************************/

/*-------------------
      Element
--------------------*/

@inputMaxWidth: 350px;
@inputWidth: 100%;

/*-------------------
        Types
--------------------*/

/* Date range picker input container */
@dateRangePickerInputPadding: @8px @10px;
@dateRangePickerInputBorderOffset: (@2px/2); // This offsets the border on .DateRangePicker.

@dateRangePickerIconWidthOffset: 42px; // This offsets the widths of the icons in the date range picker.

/* Date range picker text inputs */
@dateRangePickerDateInputPadding: (@verticalPadding - @dateRangePickerInputBorderOffset) 0;
@dateRangePickerDateInputWidth: ~"calc(50% - @{dateRangePickerIconWidthOffset})";

/* Date range picker dropdown picker */
@dateRangePickerPickerFontColor: @greyEight;
@dateRangePickerPickerZIndex: 3;
@dateRangePickerPickerBoxShadow: @spreadShadow;

@dateRangePickerPickerNavigationButtonTopSpace: (@dateRangePickerPickerMonthCaptionPaddingTop + @4px);

@dateRangePickerPickerMonthCaptionPaddingTop: @34px;
@dateRangePickerPickerMonthCaptionPaddingBottom: @59px;

@dateRangePickerPickerWeekHeaderTopSpace: 75px;
@dateRangePickerPickerWeekHeaderWidth: @48px !important;

@dateRangePickerPickerTablePadding: 0 @15px;
@dateRangePickerPickerTableCellBorder: @4px solid @pureWhite;
@dateRangePickerPickerTableCellHeight: 38px !important;
@dateRangePickerPickerTableCellWidth: 48px !important;

@dateRangePickerPickerDayHoveredBackground: @lightPrimaryColor;
@dateRangePickerPickerDaySelectedBackground: @primaryColor;
@dateRangePickerPickerDayBlockedBackground: @greyTwo;
@dateRangePickerPickerDayBlockedFontColor: @greyFive;

/*-------------------
        States
--------------------*/

/* Hover */
@hoveredInputBorderColor: @inputHoverBorderColor;

/* Dirty */

/* Focus */
@focusBackground: @focusedInputBackground;

@dateRangePickerInputFocusedBorderBottomWidth: @3px;
@dateRangePickerInputFocusedBorderBottom: @dateRangePickerInputFocusedBorderBottomWidth solid @primaryColor;
@dateRangePickerInputFocusedMarginBottom: -(@1px);
@dateRangePickerInputFocusedBorderBottomOffset: (@dateRangePickerInputFocusedBorderBottomWidth + @dateRangePickerInputFocusedMarginBottom);
@dateRangePickerInputFocusedPaddingBottom: (@verticalPadding - @dateRangePickerInputBorderOffset - @dateRangePickerInputFocusedBorderBottomOffset);

/* Error */
@errorBackground: @focusedInputBackground;
@errorColor: @textColor;

@errorMessageFontWeight: 400;
@errorMessagePadding: @6px @25px;
@errorMessageRightPosition: -(@1px);
@errorMessageTopPosition: -(@30px);

/* Valid */
@validBorderColor: @green;

@validIconPositionTop: @7px;
@validIconZIndex: 1;

/*-------------------
      Variations
--------------------*/

/* Labeled */
@labelColor: @greySix;

@labelFocusColor: @black;
@labelFocusFontSize: @10px;
@labelFocusXTranslate: @30px;
@labelFocusYTranslate: @15px;
