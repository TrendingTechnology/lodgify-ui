/* Icon Variables */

i.icon {
  height: @height;
  width: auto;
  font-family: inherit;
  vertical-align: top;

  svg {
    height: @height;
    width: @width;

    + p {
      margin: @iconLabelMargin;
    }
  }

  /* Variations */

  p {
    color: inherit;
    display: inline-block;
    line-height: @iconLabelLineHeight;
    margin: @iconReversedLabelMargin;
    vertical-align: top;
  }

  &.inverted.grey {

    p {
      text-decoration: @disabledIconLabelDecoration;
    }
  }
}
