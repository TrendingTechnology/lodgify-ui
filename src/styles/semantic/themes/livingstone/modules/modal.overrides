/* Responsive Widths */
.ui.fullscreen.modal {
  bottom: 0;
  height: @fullScreenHeight;
  overflow-y: scroll;
  position: absolute;
  top: 0;

  &.scrolling.modal {
    margin: 0 !important;
  }

  .content {
    height: 100%;
    overflow: auto;
  }
}

