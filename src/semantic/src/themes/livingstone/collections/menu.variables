@background                         : transparent;
@hoverItemBackground                : @background;
@activeItemBackground               : @background;
@activeHoverItemBackground          : @background;

@menuHorizontalMargin               : 92px;

@itemTextColor                      : @pureWhite;
@hoverItemTextColor                 : @itemTextColor;
@activeItemTextColor                : @itemTextColor;
@activeHoverItemColor               : @itemTextColor;

// Need to use margin rather than padding to implement 'active' state bottom border
@itemHorizontalPadding              : 0;
@itemHorizontalMargin               : @15px;
@itemVerticalPadding                : @35px;

// Active item underline
@activeItemUnderlineBorder          : @2px solid @primaryColor;
@activeItemUnderlineBottomPosition  : 40%;
@activeItemUnderlineTransition      : .5s @defaultEasing;

@dropdownIconDistance               : @10px;

@dropdownHoveredItemBackground      : @primaryColor;
@dropdownSelectedItemBackground     : @background;
@dropdownActiveItemBackground       : @background;

@dropdownMenuBorderRadius           : @3px;
@dropdownMenuBoxShadow              : @subMenuShadow;

@pointingDropdownMenuDistance       : -(20%);

@paginationMenuMinHeight            : 0;

@paginationButtonDiameter           : @35px;
@paginationButtonHorizontalMargin   : @15px;
@paginationPrevButtonIconMarginLeft : -(@3px) !important;
@paginationButtonIconTopPosition    : -(@2px);

@paginationLabelBackground          : @greyFive;
@paginationLabelActiveBackground    : @primaryColor;
@paginationLabelHorizontalMargin    : @8px;
@paginationLabelVerticalMargin      : @12px;
